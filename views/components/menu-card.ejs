<!-- Menu Card Component -->
<div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group" id="<%= url.uuid %>">
    <!-- Card Header -->
    <div class="h-2 bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700"></div>
    
    <div class="p-6">
        <!-- Header -->
        <div class="flex items-start justify-between mb-5">
            <div class="flex items-center space-x-4 min-w-0 flex-1">
                <div class="w-12 h-12 bg-gradient-to-br from-purple-100 to-purple-200 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-utensils text-purple-600 text-lg"></i>
                </div>
                <div class="min-w-0 flex-1">
                    <h3 class="text-lg font-bold text-gray-900 truncate mb-1"><%= url.name %></h3>
                    <p class="text-sm text-gray-500">Digital Menu</p>
                </div>
            </div>
            <button onclick="deleteMenu('<%= url.uuid %>')" class="text-gray-400 hover:text-red-500 transition-colors p-2 cursor-pointer flex-shrink-0 rounded-lg hover:bg-red-50">
                <i class="fas fa-trash text-sm"></i>
            </button>
        </div>
        
        <!-- Stats -->
        <div class="flex items-center justify-between text-sm text-gray-500 mb-6">
            <div class="flex items-center space-x-2">
                <div class="w-6 h-6 bg-gray-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-clock text-xs text-gray-600"></i>
                </div>
                <span data-time="<%= url.updatedAt %>" class="time font-medium"></span>
            </div>
            <div class="flex items-center space-x-2">
                <div class="w-6 h-6 bg-gray-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-eye text-xs text-gray-600"></i>
                </div>
                <span class="font-medium"><%=url.views%> views</span>
            </div>
        </div>
        
        <!-- Actions -->
        <div class="space-y-3">
            <div class="grid grid-cols-2 gap-3">
                <a href="/main/<%= url.uuid %>" class="flex items-center justify-center px-4 py-3 text-sm font-medium text-gray-700 bg-gray-50 rounded-xl hover:bg-gray-100 transition-all duration-200 group">
                    <i class="fas fa-edit mr-2 text-xs group-hover:scale-110 transition-transform"></i>
                    Edit
                </a>
                <a href="/show/<%=url.uuid%>" class="flex items-center justify-center px-4 py-3 text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-purple-700 rounded-xl hover:from-purple-700 hover:to-purple-800 transition-all duration-200 group shadow-sm">
                    <i class="fas fa-eye mr-2 text-xs group-hover:scale-110 transition-transform"></i>
                    Preview
                </a>
            </div>
            <a href="/qrcode/<%= url.uuid %>" class="w-full flex items-center justify-center px-4 py-3 text-sm font-medium text-gray-700 bg-gray-50 rounded-xl hover:bg-gray-100 transition-all duration-200 group">
                <i class="fas fa-qrcode mr-2 text-xs group-hover:scale-110 transition-transform"></i>
                Generate QR Code
            </a>
        </div>
    </div>
</div>
