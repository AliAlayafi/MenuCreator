<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - MenuCreator</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50 font-inter">
    <%- include('components/loading') %>
    
    <input class="message" type="text" value="<%= alert %>" style="display: none;">

    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-purple-600 rounded-xl flex items-center justify-center">
                            <i class="fas fa-utensils text-white text-lg"></i>
                        </div>
                        <div>
                            <h1 class="text-xl font-bold text-gray-900">MenuCreator</h1>
                            <p class="text-xs text-gray-500">Digital Menu Platform</p>
                        </div>
                    </div>
                </div>
                
                <!-- Actions -->
                <div class="flex items-center space-x-2 sm:space-x-4">
                    <button class="create flex items-center justify-center sm:space-x-2 px-2 sm:px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors font-medium cursor-pointer">
                        <i class="fas fa-plus text-sm"></i>
                        <span class="hidden sm:inline">Create Menu</span>
                    </button>
                    
                    <!-- User Menu -->
                    <div class="dropdown dropdown-end">
                        <div tabindex="0" class="flex items-center space-x-2 cursor-pointer hover:bg-gray-50 rounded-lg p-2">
                            <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-purple-600 text-sm"></i>
                            </div>
                            <i class="fas fa-chevron-down text-gray-400 text-xs"></i>
                        </div>
                        <ul tabindex="0" class="dropdown-content menu p-2 shadow-lg bg-white rounded-xl w-48 mt-2 border border-gray-100">
                            <li>
                                <a href="/logout" class="text-red-600 hover:bg-red-50 rounded-lg">
                                    <i class="fas fa-sign-out-alt mr-2"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Welcome Section -->
        <div class="mb-12">
            <div class="bg-gradient-to-r from-purple-500 to-purple-600 rounded-2xl p-8 text-white">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-4xl font-bold mb-2">Welcome back!</h1>
                        <p class="text-purple-100 text-lg">Create and manage your digital menus with ease</p>
                    </div>
                    <div class="hidden sm:block">
                        <button class="create flex items-center space-x-2 px-6 py-3 bg-white text-purple-600 rounded-xl hover:bg-gray-50 transition-all duration-200 font-medium cursor-pointer shadow-lg hover:shadow-xl">
                            <i class="fas fa-plus text-sm"></i>
                            <span>New Menu</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <% if(data.length) { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                            <i class="fas fa-utensils text-white text-lg"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Total Menus</p>
                            <p class="text-2xl font-bold text-gray-900"><%= data.length %></p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center shadow-lg">
                            <i class="fas fa-eye text-white text-lg"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Total Views</p>
                            <p class="text-2xl font-bold text-gray-900"><%= data.reduce((sum, menu) => sum + menu.views, 0) %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Create Button for Mobile -->
        <div class="mb-8 sm:hidden">
            <button class="create w-full flex items-center justify-center space-x-2 px-6 py-4 bg-purple-600 text-white rounded-xl hover:bg-purple-700 transition-all duration-200 font-medium cursor-pointer shadow-lg">
                <i class="fas fa-plus text-sm"></i>
                <span>Create New Menu</span>
            </button>
        </div>

        <!-- Menu Cards Section -->
        <% if(data.length) { %>
            <div class="mb-8">
                <div class="flex items-center justify-between mb-8">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900">Your Menus</h2>
                        <p class="text-gray-600 mt-1">Manage and organize your digital menus</p>
                    </div>
                    <div class="flex items-center space-x-2 text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
                        <i class="fas fa-utensils"></i>
                        <span><%= data.length %> menu<%= data.length !== 1 ? 's' : '' %></span>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% data.forEach(url => { %>
                        <%- include('components/menu-card', { url: url }) %>
                    <% }) %>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-20">
                <div class="w-24 h-24 bg-gradient-to-br from-purple-100 to-purple-200 rounded-3xl flex items-center justify-center mx-auto mb-8 shadow-lg">
                    <i class="fas fa-utensils text-purple-600 text-4xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Create your first menu</h3>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">Get started by creating your first digital menu. It's easy and takes just a few minutes!</p>
                <button class="create inline-flex items-center space-x-2 px-8 py-4 bg-purple-600 text-white rounded-xl hover:bg-purple-700 transition-all duration-200 font-medium cursor-pointer shadow-lg hover:shadow-xl">
                    <i class="fas fa-plus text-sm"></i>
                    <span>Create Your First Menu</span>
                </button>
            </div>
        <% } %>
    </main>

    <script src="https://unpkg.com/dayjs/dayjs.min.js"></script>
    <script src="https://unpkg.com/dayjs/plugin/relativeTime.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/alert.js"></script>    
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <!-- SweetAlert Custom Styles -->
    <style>
        .swal-confirm-btn {
            background: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%) !important;
            border: none !important;
            border-radius: 12px !important;
            padding: 12px 24px !important;
            font-weight: 600 !important;
            font-size: 14px !important;
            box-shadow: 0 4px 14px 0 rgba(124, 58, 237, 0.3) !important;
            transition: all 0.2s ease !important;
        }
        
        .swal-confirm-btn:hover {
            background: linear-gradient(135deg, #6d28d9 0%, #9333ea 100%) !important;
            box-shadow: 0 6px 20px 0 rgba(124, 58, 237, 0.4) !important;
            transform: translateY(-1px) !important;
        }
        
        .swal-cancel-btn {
            background: linear-gradient(135deg, #ef4444 0%, #f87171 100%) !important;
            border: none !important;
            border-radius: 12px !important;
            padding: 12px 24px !important;
            font-weight: 600 !important;
            font-size: 14px !important;
            box-shadow: 0 4px 14px 0 rgba(239, 68, 68, 0.3) !important;
            transition: all 0.2s ease !important;
        }
        
        .swal-cancel-btn:hover {
            background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%) !important;
            box-shadow: 0 6px 20px 0 rgba(239, 68, 68, 0.4) !important;
            transform: translateY(-1px) !important;
        }
        
        .swal-popup {
            border-radius: 20px !important;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04) !important;
        }
    </style>
</body>
</html>

<!-- Notify -->
<script>
  const message = document.querySelector(".message").value;
  if(message){
      alertSuccess(message)
  }
</script>

<!-- Calc Updated Time -->
<script>
  dayjs.extend(dayjs_plugin_relativeTime);
  const elements = document.querySelectorAll('.time');
  elements.forEach(el => {
    const date = el.getAttribute('data-time');
    el.innerText = 'Updated ' + dayjs(date).fromNow();
  })
</script>

<script>
    
    document.querySelectorAll(".create").forEach(btn => {
      btn.addEventListener("click", () => {

        // Alert get the menu name
        Swal.fire({
            title: "Create New Menu",
            html: `
                <div class="text-left">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Menu Name</label>
                    <input type="text" id="menuName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="Enter menu name" />
                </div>
            `,
            showCancelButton: true,
            confirmButtonText: "Create Menu",
            cancelButtonText: "Cancel",
            confirmButtonColor: "#7c3aed",
            cancelButtonColor: "#ef4444",
            background: "#ffffff",
            color: "#374151",
            width: "400px",
            padding: "2rem",
            showLoaderOnConfirm: true,
            customClass: {
                confirmButton: 'swal-confirm-btn',
                cancelButton: 'swal-cancel-btn',
                popup: 'swal-popup'
            },
            preConfirm: () => {
                const menuName = document.getElementById('menuName').value.trim();
                if (!menuName) {
                    Swal.showValidationMessage('Please enter a menu name');
                    return false;
                }
                if (menuName.length < 2) {
                    Swal.showValidationMessage('Menu name must be at least 2 characters');
                    return false;
                }
                return menuName;
            }
        }).then((result) => {
            if (result.isConfirmed) {
                check(result.value);
            }
        });


    })
    })
    

    // POST
    function check(value) {
      fetch('/main', {
        method: 'POST',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name: value })
       })
        .then(res => {
            if (!res.ok) { 
              return res.text().then(text => { 
                throw new Error(text);
              });
            }
            return res.json();
        })
        .then(data => {
            location.href = `/main/${data.message}`;
        })
        .catch(err => {
            alertError(err.message)
        });
    
    }


    async function deleteMenu(uuid){
      const sure = await alertSure();
      if(sure){
        fetch('/main', {
          method: 'DELETE',
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ uuid })
         })
          .then(res => {
              if (!res.ok) throw new Error();
              return res.json();
          })
          .then(data => {
            alertSuccess("Deleted Successfully.")
            // Reload page to refresh everything
            setTimeout(() => {
                location.reload();
            }, 1000);
          })
          .catch(err => {
            alertError("Something went wrong.!")
          });
      }

    }


</script>