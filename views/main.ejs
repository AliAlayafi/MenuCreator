<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>main</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>
<body class="min-h-screen flex flex-col items-center">
    

    

    <input class="message" type="text" value="<%= alert %>" style="display: none;">


    <div class="navbar bg-white border-b border-gray-100 px-4 sticky top-0">
      <div class="flex-1">
        <a class="text-xl font-semibold text-gray-800 hover:text-blue-600 transition-colors">
          <span class="text-blue-600">Menu</span>Creator
        </a>
    </div>
      
      <div class="flex items-center gap-4">
        <button class="create cursor-pointer flex items-center gap-1 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create
        </button>
        
        <div class="dropdown dropdown-end">
          <div tabindex="0" class="flex items-center gap-2 cursor-pointer">
            <div class="w-10 h-10 rounded-full overflow-hidden border-2 border-blue-100">
              <img src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" 
                   alt="Profile" class="w-full h-full object-cover">
            </div>
          </div>
          <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-white rounded-box w-48 mt-2 border border-gray-100">
            <li>
              <a class="text-red-500 hover:bg-red-50" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </div>


      <div class="mt-15 mb-5 px-4 max-w-4xl text-center space-y-6">
        <h1 class="text-4xl font-bold text-gray-800">
            Transform Your Restaurant's Digital Presence
        </h1>
        <p class="text-lg text-gray-600 leading-relaxed">
            Create stunning digital menus in minutes, generate beautiful QR codes instantly, 
            and update your offerings seamlessly. Elevate your dining experience with 
            zero printing costs and real-time updates.
        </p>
      </div>
    
      <div class="flex items-center justify-center w-full py-12 bg-gray-50">
        <div class="bg-white p-6 rounded-xl shadow-sm w-80 text-center border border-gray-100">
          <div class="inline-flex items-center justify-center w-12 h-12 mb-4 rounded-full bg-blue-50 text-blue-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </div>
          <h1 class="text-xl font-semibold text-gray-800 mb-2">Create Your Menu</h1>
          <p class="text-gray-500 text-sm mb-4">Generate a digital menu with QR code</p>
          <button class="create w-full py-2 px-4 text-base font-medium rounded-lg bg-blue-600 text-white flex items-center justify-center gap-2 cursor-pointer hover:bg-blue-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create Now
          </button>
        </div>
      </div>
      
      
      

    <div class="flex justify-center items-end w-full h-10">
        <hr class="w-1/2 bg-gray-300 mt-5">
    </div>

    <div class="w-full mt-10 flex flex-col gap-5">

        <% if(data.length) { %>

          <% data.forEach(url => { %>
            <div class="w-80 mx-auto bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow duration-300 border border-gray-100" id="<%= url.uuid %>">
              <!-- Card Header with Gradient Accent -->
              <div class="h-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"></div>
              
              <div class="p-5">
                <!-- Title with Interactive Icon -->
                <div class="flex items-start justify-between">
                  <div class="flex items-center space-x-3 min-w-0 w-full">
                    <div class="flex-shrink-0 p-1.5 rounded-lg bg-indigo-50 text-indigo-600">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                      </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-800 truncate">
                      <%= url.name %>
                    </h3>
                  </div>
                  <button onclick="deleteMenu('<%= url.uuid %>')" class="flex-shrink-0 text-gray-400 hover:text-red-500 transition-colors cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  </button>
                </div>
              
                <!-- Metadata -->
                <div class="mt-3 flex items-center justify-between text-xs text-gray-500">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span data-time="<%= url.updatedAt %>" class="time"></span>
                  </div>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    <%=url.views%> views
                  </div>
                </div>
              
                <!-- Action Buttons -->
                <div class="mt-4 grid grid-cols-2 gap-2">
                  <a href="/main/<%= url.uuid %>" class="inline-flex justify-center items-center px-3 py-1.5 text-xs font-medium rounded-lg border border-gray-200 text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit
                  </a>
                  
                  <a href="/show/<%=url.uuid%>" class="inline-flex justify-center items-center px-3 py-1.5 text-xs font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Preview
                  </a>
            
                  <a href="/qrcode/<%= url.uuid %>" class="col-span-2 inline-flex justify-center items-center px-3 py-1.5 text-xs font-medium rounded-lg border border-gray-200 text-gray-700 bg-white hover:bg-gray-50 transition-colors mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
                    </svg>
                    QR Code
                  </a>
                </div>
              </div>
            </div>
            <% }) %>

          

        <%}else{%>
          <p class="text-black text-center">You got no menu's created yet.</p>
        <%}%>
        
    </div>


    <footer class="mt-5"></footer>

<script src="https://unpkg.com/dayjs/dayjs.min.js"></script>
<script src="https://unpkg.com/dayjs/plugin/relativeTime.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/alert.js"></script>    
<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</body>
</html>

<!-- Notify -->
<script>
  const message = document.querySelector(".message").value;
  if(message){
      alertSuccess(message)
  }
</script>

<!-- Calc Updated Time -->
<script>
  dayjs.extend(dayjs_plugin_relativeTime);
  const elements = document.querySelectorAll('.time');
  elements.forEach(el => {
    const date = el.getAttribute('data-time');
    el.innerText = 'Updated ' + dayjs(date).fromNow();
  })
</script>

<script>
    
    document.querySelectorAll(".create").forEach(btn => {
      btn.addEventListener("click", () => {

        // Alert get the menu name
        Swal.fire({
            title: "Menu name",
            input: "text",
            showCancelButton: true,
            confirmButtonText: "Create",
          }).then((result) => {
            if (result.isConfirmed) {
              check(result.value);
            }
          });


    })
    })
    

    // POST
    function check(value) {
      fetch('/main', {
        method: 'POST',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name: value })
       })
        .then(res => {
            if (!res.ok) { 
              return res.text().then(text => { 
                throw new Error(text);
              });
            }
            return res.json();
        })
        .then(data => {
            location.href = `/main/${data.message}`;
        })
        .catch(err => {
            alertError(err.message)
        });
    
    }


    async function deleteMenu(uuid){
      const sure = await alertSure();
      if(sure){
        fetch('/main', {
          method: 'DELETE',
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ uuid })
         })
          .then(res => {
              if (!res.ok) throw new Error();
              return res.json();
          })
          .then(data => {
            document.getElementById(uuid).remove();
            alertSuccess("Deleted Successfully.")
          })
          .catch(err => {
            alertError("Something went wrong.!")
          });
      }

    }


</script>