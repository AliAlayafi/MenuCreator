<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Code Generator - MenuCreator</title>
    <script src="https://cdn.jsdelivr.net/npm/qr-code-styling@1.6.0/lib/qr-code-styling.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.9.4/dist/full.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 font-inter">

    <!-- Loading Component -->
    <%- include('components/loading') %>

    <!-- Header -->
    <div class="bg-white border-b border-gray-100 sticky top-0 z-50 print:hidden">
        <div class="max-w-6xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <a href="/main" class="flex items-center space-x-2 text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-arrow-left text-lg"></i>
                        <span class="font-medium">Back to Dashboard</span>
                    </a>
                </div>
                <div class="flex items-center space-x-2">
                    <i class="fas fa-qrcode text-purple-600 text-xl"></i>
                    <h1 class="text-xl font-bold text-gray-800">QR Code Generator</h1>
                </div>
                <div class="w-32"></div> <!-- Spacer for centering -->
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            
            <!-- Settings -->
            <div class="space-y-6 print:hidden">
                <div class="bg-white rounded-lg p-6 border border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Customize QR Code</h2>
                    
                    <!-- Colors -->
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">QR Color</label>
                            <input type="color" id="qrColor" value="#7c3aed" class="w-full h-10 rounded border border-gray-300 cursor-pointer">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Background</label>
                            <input type="color" id="bgColor" value="#ffffff" class="w-full h-10 rounded border border-gray-300 cursor-pointer">
                        </div>
                    </div>

                    <!-- Style -->
                    <div class="grid grid-cols-2 gap-4 mt-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Dot Style</label>
                            <select id="dotStyle" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-purple-500">
                                <option value="square">Square</option>
                                <option value="rounded" selected>Rounded</option>
                                <option value="dots">Dots</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Eye Style</label>
                            <select id="eyeStyle" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-purple-500">
                                <option value="square">Square</option>
                                <option value="rounded" selected>Rounded</option>
                                <option value="circle">Circle</option>
                            </select>
                        </div>
                    </div>

                    <!-- Logo -->
                    <div class="mt-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Logo (Optional)</label>
                        <input type="file" id="logoUpload" accept="image/png, image/jpeg" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-purple-500">
                        <div id="logoPreview" class="mt-2 hidden text-center">
                            <img id="previewImage" class="max-h-16 mx-auto mb-2" src="#" alt="Logo preview">
                            <button id="removeLogoBtn" class="text-red-500 hover:text-red-700 text-sm cursor-pointer">Remove Logo</button>
                        </div>
                    </div>

                    <!-- Print Button -->
                    <div class="mt-6">
                        <button id="printBtn" class="w-full bg-purple-600 text-white py-2 px-4 rounded font-medium hover:bg-purple-700 transition-colors cursor-pointer">
                            Print QR Code
                        </button>
                    </div>
                </div>
            </div>

            <!-- QR Code -->
            <div class="bg-white rounded-lg p-6 border border-gray-200 text-center">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">QR Code</h3>
                <div id="qr-code" class="flex justify-center print:fixed print:inset-0 print:flex print:items-center print:justify-center">
                    <!-- QR Code will be generated here -->
                </div>
                <p class="text-gray-500 text-sm mt-4 print:hidden">Scan to view your menu</p>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let uploadedLogo = null;

            // Initialize QR Code
            generateQRCode();

            // Event listeners
            document.getElementById('qrColor').addEventListener('input', generateQRCode);
            document.getElementById('bgColor').addEventListener('input', generateQRCode);
            document.getElementById('dotStyle').addEventListener('change', generateQRCode);
            document.getElementById('eyeStyle').addEventListener('change', generateQRCode);
            document.getElementById('printBtn').addEventListener('click', function() {
                window.print();
            });

            // Logo upload
            document.getElementById('logoUpload').addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    if (file.size > 1024 * 1024) {
                        alert('File too large! Max 1MB.');
                        this.value = '';
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(event) {
                        document.getElementById('previewImage').src = event.target.result;
                        document.getElementById('logoPreview').classList.remove('hidden');
                        uploadedLogo = event.target.result;
                        generateQRCode();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Remove logo
            document.getElementById('removeLogoBtn').addEventListener('click', function() {
                document.getElementById('logoUpload').value = '';
                document.getElementById('logoPreview').classList.add('hidden');
                uploadedLogo = null;
                generateQRCode();
            });

            function generateQRCode() {
                const qrContainer = document.getElementById("qr-code");
                qrContainer.innerHTML = '';

                let options = {
                    width: 300,
                    height: 300,
                    data: "http://localhost:3000/show/<%=url%>",
                    dotsOptions: {
                        color: document.getElementById("qrColor").value,
                        type: document.getElementById("dotStyle").value
                    },
                    backgroundOptions: {
                        color: document.getElementById("bgColor").value
                    },
                    cornersSquareOptions: {
                        type: document.getElementById("eyeStyle").value,
                        color: document.getElementById("qrColor").value
                    },
                    cornersDotOptions: {
                        type: document.getElementById("eyeStyle").value,
                        color: document.getElementById("qrColor").value
                    }
                };

                if (uploadedLogo) {
                    options.image = uploadedLogo;
                    options.imageOptions = {
                        hideBackgroundDots: true,
                        imageSize: 0.2,
                        margin: 5
                    };
                }

                const qrCode = new QRCodeStyling(options);
                qrCode.append(qrContainer);
            }
        });
    </script>
</body>
</html>
</html>