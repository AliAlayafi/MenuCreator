<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - MenuCreator</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50 font-inter flex items-center justify-center p-4">

    <input class="message" type="text" value="<%= alert %>" style="display: none;">

    <!-- Main Container -->
    <div class="w-full max-w-md">
        <!-- Logo/Brand Header -->
        <div class="text-center mb-6">
            <a href="/" class="inline-flex items-center space-x-2 text-gray-700 hover:text-purple-600 transition-colors">
                <i class="fas fa-utensils text-purple-600 text-2xl"></i>
                <span class="text-xl font-bold">MenuCreator</span>
            </a>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg p-8">
            
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-purple-600 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-user-plus text-white text-2xl"></i>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">Create Account</h1>
                <p class="text-gray-600">Join MenuCreator today</p>
            </div>
            
            <!-- Register Form -->
            <form action="/register" method="post" class="space-y-6" id="registerForm">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
                        <input type="text" name="username" placeholder="Choose a username" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                               required value="<%= typeof username !== 'undefined' ? username : '' %>" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input type="email" name="email" placeholder="Enter your email" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                               required value="<%= typeof email !== 'undefined' ? email : '' %>" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <input type="password" name="password" placeholder="Create a password" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                               id="passwordInput" required value="<%= typeof password !== 'undefined' ? password : '' %>" />
                        <div class="mt-2">
                            <div class="h-1 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full" id="passwordStrength"></div>
                            </div>
                            <p class="text-sm text-gray-500 mt-1" id="passwordText">Password strength</p>
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 rounded-lg transition-colors cursor-pointer">
                    Create Account
                </button>
                
                <div class="text-center">
                    <a href="/login" class="text-purple-600 hover:text-purple-700 text-sm font-medium">
                        Already have an account? Sign in
                    </a>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Loading Component -->
    <%- include('components/loading') %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/alert.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

<!-- Simple Form Validation and Password Strength -->
<script>
    // Password strength indicator
    const passwordInput = document.getElementById('passwordInput');
    const passwordStrength = document.getElementById('passwordStrength');
    const passwordText = document.getElementById('passwordText');
    
    passwordInput.addEventListener('input', function() {
        const password = this.value;
        const strength = calculatePasswordStrength(password);
        updatePasswordStrengthIndicator(strength);
    });
    
    function calculatePasswordStrength(password) {
        let score = 0;
        if (password.length >= 8) score++;
        if (password.match(/[a-z]/)) score++;
        if (password.match(/[A-Z]/)) score++;
        if (password.match(/[0-9]/)) score++;
        if (password.match(/[^a-zA-Z0-9]/)) score++;
        return score;
    }
    
    function updatePasswordStrengthIndicator(strength) {
        passwordStrength.className = 'h-full';
        
        if (strength <= 1) {
            passwordStrength.classList.add('bg-red-500', 'w-1/4');
            passwordText.textContent = 'Weak password';
            passwordText.className = 'text-sm text-red-500 mt-1';
        } else if (strength <= 2) {
            passwordStrength.classList.add('bg-yellow-500', 'w-1/2');
            passwordText.textContent = 'Medium strength';
            passwordText.className = 'text-sm text-yellow-500 mt-1';
        } else if (strength <= 3) {
            passwordStrength.classList.add('bg-green-500', 'w-3/4');
            passwordText.textContent = 'Strong password';
            passwordText.className = 'text-sm text-green-500 mt-1';
        } else {
            passwordStrength.classList.add('bg-green-600', 'w-full');
            passwordText.textContent = 'Very strong password';
            passwordText.className = 'text-sm text-green-600 mt-1';
        }
    }
    
    // Form validation
    const registerForm = document.getElementById('registerForm');
    
    registerForm.addEventListener('submit', function(e) {
        const username = document.querySelector('input[name="username"]').value.trim();
        const email = document.querySelector('input[name="email"]').value.trim();
        const password = document.querySelector('input[name="password"]').value;
        
        if (username.length < 3) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Invalid Username',
                text: 'Username must be at least 3 characters long',
                confirmButtonColor: '#8b5cf6',
                background: '#ffffff',
                color: '#374151'
            });
            return;
        }
        
        if (!isValidEmail(email)) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Invalid Email',
                text: 'Please enter a valid email address',
                confirmButtonColor: '#8b5cf6',
                background: '#ffffff',
                color: '#374151'
            });
            return;
        }
        
        if (password.length < 6) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Weak Password',
                text: 'Password must be at least 6 characters long',
                confirmButtonColor: '#8b5cf6',
                background: '#ffffff',
                color: '#374151'
            });
            return;
        }
        
        // Form is submitting
    });
    
    function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }
</script>
</body>
</html>

